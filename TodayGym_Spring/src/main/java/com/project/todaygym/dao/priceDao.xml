<?xml version="1.0" encoding="UTF-8"?>
<!-- ﻿Mybatis mapper를 작성하기 위한 문서타입(DTD)설정 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper : interface에 정의한 SQL 실행 메소드와 mybatis의 태그요소를 연결. -->
<mapper namespace="com.project.todaygym.dao.priceDao">
	<!-- 1. 상세페이지 정보표시 -->
	<select id="getContents" parameterType="String" resultType="com.project.todaygym.dto.priceDto">
		SELECT * FROM buydetail WHERE b_code = #{b_code}
	</select>
	<!-- 2. 카트 정보 넣기 -->
	<insert id="cartInsert" parameterType="com.project.todaygym.dto.priceDto">
		INSERT INTO buydetail VALUES (#{b_code}, #{b_subcate}, #{b_img}, #{p_term}, #{p_price})
	</insert>
</mapper>