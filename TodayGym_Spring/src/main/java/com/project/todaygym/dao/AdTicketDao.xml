<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.todaygym.dao.AdTicketDao">

	<select id="getAdTList" parameterType="HashMap"
		resultType="com.project.todaygym.dto.AdTicketDto">
		<![CDATA[
		SELECT * FROM TICKET_TB
		WHERE RONUM >= (#{num} * #{lCnt}) - (#{lCnt} - 1)  
			AND RONUM <= #{num} * #{lCnt}
		]]>
	</select>
	
	<select id="getTicketLCnt" resultType="Integer">
		SELECT COUNT(*) FROM TICKET_TB
	</select>

</mapper>