<?xml version="1.0" encoding="UTF-8"?>
<!-- ﻿Mybatis mapper를 작성하기 위한 문서타입(DTD)설정 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper : interface에 정의한 SQL 실행 메소드와 mybatis의 태그요소를 연결. -->
<mapper namespace="com.project.todaygym.dao.buyDao">

	<!-- 1. 구매메인페이지 정보 가져오기 -->
	<select id="getBuyList" resultType="com.project.todaygym.dto.buyDto">
		SELECT * FROM B
	</select>
	<!-- 2. 구매상세 내용가져가기 -->
	<select id="getDetail" parameterType="String" resultType="com.project.todaygym.dto.buyDto">
		SELECT * FROM b WHERE b_code = #{b_code}
	</select>
	
</mapper>